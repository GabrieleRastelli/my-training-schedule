<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:id="@+id/layout_exercise">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/internal_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_ex"
        app:layout_constraintVertical_bias="0.424">

        <Button
            android:id="@+id/btn_down_s"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/seguisb"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/switchCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_up_s"
            app:layout_constraintVertical_bias="0.083" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="Rep"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <Button
            android:id="@+id/btn_down_r"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/seguisb"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/switchCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_up_r"
            app:layout_constraintVertical_bias="0.676" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="Set equipment"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_down_s"
            app:layout_constraintVertical_bias="0.174" />

        <TextView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/seguisb"
            android:text="0"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_down_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_up_s"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="0"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_down_w"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_up_w"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="Wheight"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <Button
            android:id="@+id/btn_up_w"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/seguisb"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_up_s"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/seguisb"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.029" />

        <Button
            android:id="@+id/btn_down_w"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/seguisb"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/switchCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_up_w"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="Sets"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <TextView
            android:id="@+id/rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="0"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.365" />

        <Button
            android:id="@+id/btn_up_r"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/custom_login_button"
            android:fontFamily="@font/seguisb"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/rep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/rep"
            app:layout_constraintVertical_bias="0.364"
            app:track="@drawable/track" />


        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/appCompatSeekBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:indeterminate="false"
            android:max="300"
            android:progress="0"
            android:progressDrawable="@drawable/track_seek"
            android:thumb="@drawable/thumb_seek"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switchCompat"
            app:layout_constraintVertical_bias="0.578" />

        <TextView
            android:id="@+id/seconds"
            android:layout_width="234dp"
            android:layout_height="25dp"
            android:fontFamily="@font/seguisb"
            android:text="0 Minutes 0 Seconds"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatSeekBar"
            app:layout_constraintEnd_toEndOf="@+id/appCompatSeekBar"
            app:layout_constraintHorizontal_bias="0.566"
            app:layout_constraintStart_toStartOf="@+id/appCompatSeekBar"
            app:layout_constraintTop_toTopOf="@+id/appCompatSeekBar"
            app:layout_constraintVertical_bias="0.466" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:background="@drawable/custom_login_button"
        android:fontFamily="@font/seguisb"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/white"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/internal_layout"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/title_ex"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:completionThreshold="1"
        android:hint="Exercise title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/seguisb"
        android:text="Add an Exercise!"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/title_ex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Spinner
        android:id="@+id/ex_type"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191"/>

</androidx.constraintlayout.widget.ConstraintLayout>